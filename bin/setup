#!/usr/bin/env bash
set -o errexit -o nounset -o pipefail
cd "$(dirname "$0")/.."

RESET="\e[0m"
LCYAN="\e[96m"

to_install=()

sudo() {
    # This is mainly to allow running in Docker
    if [[ $UID -eq 0 ]]; then
        "$@"
    else
        command sudo "$@"
    fi
}

require() {
    local command=$1
    local package=${2-$command}

    printf '%-13s' "$command"

    if command -v "$command" &>/dev/null; then
        echo 'Already installed'
    else
        echo 'Missing'
        to_install+=("$package")
    fi
}

echo -e "${LCYAN}Checking for missing dependencies...${RESET}"
require gawk
require inotifywait inotify-tools
require kcov
require npm
require shellcheck
echo

if [[ ${#to_install[@]} -gt 0 ]]; then
    if [[ $UID -eq 0 ]]; then
        echo -e "${LCYAN}Installing missing dependencies...${RESET}"
    else
        echo -e "${LCYAN}Installing missing dependencies (requires root access)...${RESET}"
    fi

    sudo apt-get update
    echo
    sudo apt-get -y install "${to_install[@]}"
    echo
fi

echo -e "${LCYAN}Installing/updating Node modules...${RESET}"
npm ci
