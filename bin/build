#!/usr/bin/env bash
set -o errexit -o nounset -o pipefail
cd "$(dirname "$0")/.."

default_version='1.2.3-dev'
version=${1-$default_version}

if [[ $version = '--help' || $version = '-h' ]]; then
    echo "Usage: ${BIN_COMMAND-$0} [version=$default_version]"
    exit
fi

mkdir -p dist

gawk \
    "{
        if (\$0 ~ /VERSION=.*/)
            print \"VERSION='$version'\"
        else
            print
    }" \
    src/bin \
    > dist/bin

chmod +x dist/bin

# Smoke test
dist/bin -v
